# PRODUCTION ENVIRONMENT CONFIGURATION
# ⚠️ NEVER COMMIT THIS FILE TO VERSION CONTROL

# Database MySQL - Production
DB_HOST=your-production-db-host
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_NAME=tvbox_production
DB_PORT=3306

# JWT Secrets - GENERATE NEW SECURE SECRETS FOR PRODUCTION
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_64_BYTE_HEX_SECRET_FOR_GENERAL_AUTH
JWT_SECRET_ADMIN=REPLACE_WITH_64_BYTE_HEX_SECRET_FOR_ADMIN_AUTH
JWT_SECRET_DEVICE=REPLACE_WITH_64_BYTE_HEX_SECRET_FOR_DEVICE_AUTH
JWT_REFRESH_SECRET=REPLACE_WITH_64_BYTE_HEX_SECRET_FOR_REFRESH_TOKENS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration - Production
PORT=3001
NODE_ENV=production
BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# CORS Configuration - Restrict to your domains only
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=100mb

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
SOCKET_IO_PATH=/socket.io

# Security Configuration
SESSION_SECRET=REPLACE_WITH_64_BYTE_HEX_SECRET_FOR_SESSIONS
ENCRYPTION_KEY=REPLACE_WITH_32_BYTE_HEX_KEY_FOR_ENCRYPTION

# Rate Limiting - Production values
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem
FORCE_HTTPS=true

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Redis Configuration (for multi-instance deployments)
REDIS_URL=redis://your-redis-host:6379
REDIS_PREFIX=tvbox:prod:
REDIS_PASSWORD=your-redis-password

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/tvbox/app.log
ERROR_REPORTING_URL=https://your-error-tracking-service.com/api

# Backup Configuration
BACKUP_ENCRYPTION_KEY=REPLACE_WITH_32_BYTE_HEX_KEY_FOR_BACKUP_ENCRYPTION
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Content Delivery Network (CDN)
CDN_URL=https://your-cdn-domain.com
CDN_API_KEY=your-cdn-api-key

# Analytics and Monitoring
ANALYTICS_API_KEY=your-analytics-api-key
MONITORING_API_KEY=your-monitoring-api-key
HEALTH_CHECK_TOKEN=REPLACE_WITH_32_BYTE_HEX_TOKEN_FOR_HEALTH_CHECKS

# Feature Flags
ENABLE_2FA=true
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true
ENABLE_CONTENT_ENCRYPTION=true

# Database Connection Pool
DB_CONNECTION_LIMIT=20
DB_QUEUE_LIMIT=0
DB_TIMEOUT=60000

# File Storage
STORAGE_TYPE=s3
S3_BUCKET=your-content-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.com/csp-report

# API Rate Limiting per User
USER_RATE_LIMIT_WINDOW_MS=60000
USER_RATE_LIMIT_MAX_REQUESTS=100

# Device Management
DEVICE_TOKEN_EXPIRES_IN=30d
MAX_DEVICES_PER_TENANT=100

# Content Management
MAX_CONTENT_SIZE_MB=500
ALLOWED_CONTENT_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,video/mov,video/avi

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_MODE=strict

# Performance Monitoring
PERF_MONITORING_ENABLED=true
PERF_SAMPLE_RATE=0.1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistema em manutenção. Tente novamente em alguns minutos."

# Timezone
TZ=America/Sao_Paulo